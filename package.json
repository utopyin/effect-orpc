{
  "name": "effect-orpc",
  "version": "0.0.10",
  "keywords": [
    "effect",
    "orpc",
    "utopy",
    "utopyin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/utopyin/effect-orpc.git"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "src"
  ],
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./src/index.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "bun run build --watch",
    "type:check": "tsc -b",
    "lint:check": "oxlint",
    "format:check": "oxfmt --check",
    "check": "bun run format:check && bun run lint:check && bun run type:check",
    "format": "oxfmt",
    "test": "vitest ./src/tests"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "effect": "^3.18.4",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.36.0",
    "tsup": "^8.5.1",
    "ultracite": "7.0.3",
    "vitest": "^4.0.16",
    "zod": "^4.3.4"
  },
  "peerDependencies": {
    "@orpc/client": ">=1.13.0",
    "@orpc/contract": ">=1.13.0",
    "@orpc/server": ">=1.13.0",
    "@orpc/shared": ">=1.13.0",
    "effect": ">=3.18.0",
    "typescript": "^5"
  }
}
